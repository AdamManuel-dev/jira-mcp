# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sias_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sias_dev
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# JIRA Integration
JIRA_CLIENT_ID=your-jira-oauth-client-id
JIRA_CLIENT_SECRET=your-jira-oauth-client-secret
JIRA_REDIRECT_URI=http://localhost:3000/auth/jira/callback
JIRA_SCOPES=read:jira-work,read:jira-user,write:jira-work

# GitHub Integration
GITHUB_CLIENT_ID=your-github-app-client-id
GITHUB_CLIENT_SECRET=your-github-app-client-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# GitLab Integration
GITLAB_CLIENT_ID=your-gitlab-app-client-id
GITLAB_CLIENT_SECRET=your-gitlab-app-client-secret
GITLAB_WEBHOOK_SECRET=your-gitlab-webhook-secret

# Bitbucket Integration
BITBUCKET_CLIENT_ID=your-bitbucket-oauth-client-id
BITBUCKET_CLIENT_SECRET=your-bitbucket-oauth-client-secret

# Notification Services
EMAIL_SERVICE_API_KEY=your-sendgrid-api-key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=SIAS Alert System

SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

TEAMS_WEBHOOK_URL=https://your-teams-webhook-url

SMS_SERVICE_SID=your-twilio-sid
SMS_SERVICE_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=sias-file-storage
AWS_S3_REGION=us-east-1

# Machine Learning
ML_MODEL_API_URL=http://localhost:8000
ML_MODEL_API_KEY=your-ml-service-api-key

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000